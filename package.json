{
  "name": "lit-redux-router",
  "version": "0.3.4",
  "description": "Declarative way of routing for lit-html powered by pwa-helpers, redux and lit-element",
  "keywords": [
    "router",
    "lit-html",
    "lit-element",
    "redux"
  ],
  "homepage": "https://github.com/fernandopasik/lit-redux-router",
  "bugs": "https://github.com/fernandopasik/lit-redux-router/issues",
  "license": "MIT",
  "author": "Fernando Pasik <fernando@pasik.com.ar> (https://fernandopasik.com)",
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/fernandopasik/lit-redux-router.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "start": "npm-run-all -p 'build --watch' 'serve'",
    "serve": "polyserve --npm --root demo --module-resolution node",
    "test": "jest",
    "lint": "eslint . --ext ts",
    "build": "tsc",
    "prebuild": "del dist",
    "size": "rollup -c && bundlesize && del bundle.js",
    "preversion": "yarn lint && yarn test && yarn build && yarn size"
  },
  "bundlesize": [
    {
      "path": "bundle.js",
      "maxSize": "1.5 kB"
    }
  ],
  "dependencies": {
    "regexparam": "^1.0.1"
  },
  "peerDependencies": {
    "lit-element": "^2.0.0-rc.2",
    "pwa-helpers": "^0.9.0",
    "redux": "^4.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "lit-element": "^2.0.0-rc.2",
    "@types/jest": "^23.3.10",
    "@webcomponents/webcomponentsjs": "^2.2.1",
    "bundlesize": "^0.17.0",
    "codecov": "^3.1.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-junit": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "polyserve": "^0.27.13",
    "pwa-helpers": "^0.9.0",
    "redux": "^4.0.1",
    "redux-mock-store": "^1.5.3",
    "rollup": "^0.67.4",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-terser": "^3.0.0",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.1",
    "typescript-eslint-parser": "^21.0.2"
  }
}
