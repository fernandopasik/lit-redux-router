{
  "name": "lit-redux-router",
  "version": "0.8.6",
  "description": "Declarative way of routing for lit-html powered by pwa-helpers, redux and lit-element",
  "keywords": [
    "router",
    "lit-html",
    "lit-element",
    "redux"
  ],
  "homepage": "https://github.com/fernandopasik/lit-redux-router",
  "bugs": "https://github.com/fernandopasik/lit-redux-router/issues",
  "license": "MIT",
  "author": "Fernando Pasik <fernando@pasik.com.ar> (https://fernandopasik.com)",
  "contributors": [
    "Grant Hutchinson <grant@hutchdev.ca>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fernandopasik/lit-redux-router.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "start": "npm-run-all -p 'build --watch' 'serve'",
    "serve": "polyserve --npm --root demo --module-resolution node",
    "test": "jest",
    "lint": "eslint . --ext ts",
    "build": "tsc",
    "check-types": "tsc --noEmit -p tsconfig.test.json",
    "prebuild": "del dist",
    "size": "rollup -c && bundlesize && del bundle.js",
    "preversion": "yarn lint && yarn test && yarn build && yarn size"
  },
  "bundlesize": [
    {
      "path": "bundle.js",
      "maxSize": "1.5 kB"
    }
  ],
  "dependencies": {
    "regexparam": "^1.2.1"
  },
  "peerDependencies": {
    "lit-element": "^2.1.0",
    "lit-html": "^1.0.0",
    "pwa-helpers": "^0.9.1",
    "redux": "^4.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "@types/jest": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "@webcomponents/webcomponentsjs": "^2.2.10",
    "bundlesize": "^0.17.1",
    "codecov": "^3.4.0",
    "deep-freeze": "^0.0.1",
    "del-cli": "^1.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-lit": "^1.0.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "lint-staged": "^8.1.6",
    "lit-element": "^2.1.0",
    "lit-html": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "polyserve": "^0.27.15",
    "pwa-helpers": "^0.9.1",
    "redux": "^4.0.1",
    "redux-mock-store": "^1.5.3",
    "rollup": "^1.11.3",
    "rollup-plugin-node-resolve": "^4.2.4",
    "rollup-plugin-terser": "^4.0.4",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  }
}
